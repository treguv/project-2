            </div>
            {{#if loggedIn}}

            {{/if}}
        </div>
        <div class=" caption-section-wrapper">
            <div class="caption-wrapper my-auto">
                <form class="caption-form">

                    <div class="form-group ">
                        {{#if loggedIn}}
                        <h3 class="comment">Comment</h3>
                        <textarea placeholder="Comment" id="comment" class="form-control" rows="3"
                            id="comment"></textarea>
                        <input type="hidden" value={{user_id}} id="session_user">
                        <button id="post-comment" class="btn btn-success " type="button">Post!
                        </button>
                        {{/if}}
                    </div>


                    {{#if post.comments}}
                    <div class="scroll">
                        {{#each post.comments as |comment| }}
                        <div class="card">
                            <div class="card-header"> {{user.username}}
                                <a class="inline-block dot " href="https://github.com/"></a>
                            </div>
                            <div class="card-body">
                                <p class="card-text"> {{comment_text}}</p>
                                <button type="button" class="btn btn-primary" id="like-btn">Like</button>
                                {{!-- add deleted! --}}
                            </div>
                        </div>
                        </option>

                        {{/each}}
                        </select>
