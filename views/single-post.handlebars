<link rel="stylesheet" href="/stylesheets/image-upload.css">
<link rel="stylesheet" href="/stylesheets/singlepost.css">
<main>
    <div class="container col-12">
        <div class="row">

            <div class="col-lg-6 col-sm-12">
                <!-- post image -->
                <div class="mt-3 drop-shadow col-lg-8" id="post-image-card">
                    <img id="post-image" src="{{post.image_url}}" class="card-img-top">
                    <!-- shows amount of post likes -->
                    <p class="mt-2"><i class="far fa-heart"></i>{{post.like_count}} 1,345</p>
                </div>
                <div>
                    <!-- ability to like post -->
                    <button type="button" class="btn btn-like" id="like-btn"><i class="far fa-heart"></i></button>
                </div>


                <!-- post caption -->
                <div class="mt-1 drop-shadow col-lg-6">
                    <a class="dot-single-post" href="https://github.com/"></a>
                    <p class="post-user"><strong>{{post.user.username}}</strong> - {{post.post_caption}}</p>
                </div>



                {{!-- Comment stuff --}}
                <div class="col-lg-4 col-sm-12">
                    <div class="form-group py-3  ">
                        {{#if loggedIn}}
                        {{!-- if user is loggedIn, display the following --}}
                        <textarea placeholder="Comment" class=" form-control py-2 drop-shadow" rows="3"
                            id="comment"></textarea>
                        {{/if}}
                        {{!-- retrieving user_id and hiding because (user id will display on html) user_id is needed to
                        create comment --}}
                        <input type="hidden" value={{user_id}} id="session_user">
                    </div>
                    {{#each post.comments as |comment| }}
                    <div class="card mt-1 drop-shadow">
                        <p>{{comment_text}}</p>
                        <p>{{user.username}}</p>
                        {{/each}}
                    </div>
                    {{#if loggedIn}}
                    <div class="col-lg-2">
                        <button id="post-comment" type="button"
                            class="my-3 mx-0  px-5 py-4 btn btn-light ">Post</button>
                        <!-- post comment button -->
                        {{!-- adding like button --}}
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
