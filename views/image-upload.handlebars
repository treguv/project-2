<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/image-upload.css">
</head>
<div class="flex-container">
    <div class="col-md-6">
        <h1 class="caption-title">Image Upload</h1>
        <img id="post-image" src="/img/addimage2.png" class="image">
    </div>

    <div>
        <div class="caption-wrapper my-auto">
            <form class="col-md-12">
                <div class="form-group mt-5">
                    <h1 class="caption-title">Create Caption</h1>
                    <textarea name="caption" id="caption" class="form-control"
                        placeholder="caption-something"></textarea>
                </div>

                <div class="row">
                    <select id="tag" class="btn btn-success" aria-label="Default select example">
                        <option selected>Tags Categories </option>
                        <option value="1">Cute</option>
                        <option value="2">Cute</option>
                        <option value="3">Cute</option>
                    </select>

                    <button id="upload-image" class="btn btn-success " type="button">Post!
                    </button>

                </div>
            </form>
            <input type="hidden" value={{user_id}} id="user_id">
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script src="./javascript/image.js"></script>