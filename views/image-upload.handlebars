<link rel="stylesheet" href="/stylesheets/image-upload.css">
<main>
    <div class="container col-12">
        <div class="row">
            <div class="col-lg-12 col-sm-12 ">
                <div class="card mt-3 drop-shadow fill-in " id="post-image-card">
                    <img id="post-image" src="/images/stock_add_image.png" class="fill-in-image card-img-top">
                </div>
            </div>
            <div class="col-lg-12 col-sm-12">
                <div class="form-group py-3">
                    {{!-- <label for="caption">Caption:</label> --}}
                    <textarea placeholder="Caption" class="form-control py-2 drop-shadow" rows="3"
                        id="caption"></textarea>
                    {{!-- <label for="tags" placeholder="Tags...">Tags:</label> --}}
                    <textarea class="form-control py-2 my-2 drop-shadow" rows="1" id="tag"
                        placeholder="Tags"></textarea>
                </div>
                {{!-- Dropdown for Selection tag --}}
                <input type="hidden" value={{user_id}} id="user_id">
                <button id="upload-image" class="btn btn-success " type="button">Post!</button>
                <input type="hidden" value={{user_id}} id="user_id">
            </div>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dropdown button
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </div>
        </div>
    </div>
</main>
