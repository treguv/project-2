<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/singlepost.css">
</head>

<body>
    <main>
        <div class="flex-container">
            <div class="col-md-12 col-lg-6 mt-4">
                {{!-- the post caption needs to be a heading --}}

                {{!-- post image --}}
                <div class="row ml-lg-2">
                    <img id="post-image" src="{{post.image_url}}" class="card-img-top">
                </div>
                {{!-- like button and amount of likes post has --}}
                <div id="like-row" class="row">
                    <p class="tags">#{{post.tags}}</p>
                </div>
            </div>

            <div class="col-md-12 col-lg-6 p-auto mt-5">
                {{!-- profile pic --}}
                {{!-- <div id="profile-col" class="lim-width px-2">
                    {{>pfp post.user}}
                </div> --}}
                {{!-- post username and post caption --}}
                <form class="edit-post-form offset-lg-3" id="editform">
                    <div class="row edit-page-username">
                        <div class="col-md-12" id="user-col">
                            {{post.user.username}}
                            <div class = "mt-3 pb-2">
                            <p class = "edit-caption-header">change your post caption!</p>
                            <input class="form-control edit-caption" name="edit-caption" type="text" value="{{post.post_caption}}" />
                            </div>
                        </div>
                    </div>
                    {{!-- save btn to confirm changes --}}
                    <div class="row" class="edit_delete">
                        <div class="mr-3" id="edit-button">
                            <button class=" btn save-edit-btn" type="submit">Save </button>
                        </div>
                </form>
                {{!-- delete button --}}
                <form class="delete-form">
                    <div id="delete-button">
                        <button id="delete" class="btn delete-post-btn" type="submit">Delete</button>
                        <input type="hidden" value={{post.id}} id="post_id" />
                    </div>
                </form>
            </div>
            {{!-- being used in JS -- to pass value from ROUTE to JS--}}
            <input type="hidden" value={{user_id}} id="user_id">
            <input type="hidden" value={{user_id}} id="session_user">
        </div>
    </main>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript">
    </script>
    <script src="./javascript/image.js"></script>
    <script src="/javascript/comment.js"></script>
    <script src="/javascript/edit-post.js"></script>
    <script src="/javascript/like.js"></script>


    {{!-- scripts for the dropdown tag search --}}

    <script src="/javascript/search.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>