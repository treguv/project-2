<main>
    <div class="container col-12">
        <div class="row">
            {{#each posts}}
            <div class="col-2">
                <div class="card mt-3">
                    <img src="{{image_url}}" class="card-img-top">
                    <div class="card-body">
                        <p class="card-text">{{post_caption}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>